#include "ladder.h"


Item* initialize(const char* dir_name)
{
	glob_t globbuf;
	int count;

	glob(dir_name, GLOB_ERR, NULL, &globbuf);

	count = 0;
	while(count < globbuf.gl_pathc)
	{

		count++;
	}


}


//-------------------------------------------------------------------------------------------------

// link two binary lists

Item* ll_link(Item* a, Item* b)
{
	a->next = b;
}


//-------------------------------------------------------------------------------------------------


